{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "version": "4.7",
                "dist": {
                    "type": "zip",
                    "url": "https://wordpress.org/wordpress-4.7.zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "wp-json",
                "version": "0.1",
                "type": "wordpress-theme",
                "dist": {
                    "type": "path",
                    "url": "support/wordpress/wp-json"
                },
                "require": {
                    "wordpress": "*"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        } 
    ],
    "require": {
        "php": "~7.1",
        "wordpress": "*",
        "wp-json": "*",
        "wp-cli/wp-cli": "~0.22",
        "wpackagist-plugin/advanced-custom-fields": "dev-trunk",
        "wpackagist-plugin/amazon-s3-and-cloudfront": "dev-trunk",
        "wpackagist-plugin/amazon-web-services": "dev-trunk"
    },
    "extra": {
        "installer-paths": {
            "vendor/wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "vendor/wordpress/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "post-install-cmd": "cp -f support/wordpress/wp-config.php vendor/wordpress/wp-config.php"
    }
}